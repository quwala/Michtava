@using Common
@{
    ViewBag.Title = "Administration";
}

<div class="jumbotron">
    <h1>Dashboard</h1>
    <p class="lead">This is the administration area of michtava.</p>
    <ul class="list-inline">
        <li>
            <a href="/Administration/Teachers/Index">
                <img src="~/Content/Images/Admin_Panel/teacher-icon.png" border="0" alt="teachers icon" />
            </a>
            <p class="lead">Teachers &raquo;</p>
        </li>
        <li>
            <a href="/Administration/Students/Index">
                <img src="~/Content/Images/Admin_Panel/student-icon.png" border="0" alt="students icon" />
            </a>
            <p class="lead">Students &raquo;</p>
        </li>
       
        @if (User.IsInRole(GlobalConstants.SuperAdministratorRoleName))
        {
            <li>
                <a href="/Administration/Administrators/Index">
                    <img src="~/Content/Images/Admin_Panel/administrator-icon.png" border="0" alt="clock icon" />
                </a>
                <p class="lead">Administrators &raquo;</p>
            </li>
        }
        <li>
            <a href="/Administration/SchoolClasses/Index">
                <img src="~/Content/Images/Admin_Panel/schoolclass-icon.png" border="0" alt="calendar icon" />
            </a>
            <p class="lead">Classes &raquo;</p>
        </li>
    </ul>
</div>