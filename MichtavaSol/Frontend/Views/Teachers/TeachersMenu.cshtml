

<br /><br /><br />
<head>
    <style>
        h2 {
            font-weight: bold;
            font: 50px arial, sans-serif;
        }

        input[type='submit'] {
            font-size: 32px;
            background-color: darkorange;
            border-color: darkorange;
        }

        body {
            background-image: url("../../Backgrounds/background.jpg");
            width: 100%;
            height: 100%;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .notification-on {
            position: absolute;
            top: 0;
            right: 0;
            text-align: center;
            color: white;
            border-radius: 10px;
            background-color: red;
            width: 20px;
            font-weight: bold;
        }

        abbr[title] {
            border-bottom: none !important;
            cursor: inherit !important;
            text-decoration: none !important;
        }
    </style>
</head>

<body>
    <div class="row">
            <div class="row">
                <div class="col-sm-10">
                    <b><h2>@ViewBag.Title:</h2></b>
                </div>
            </div>
            <br />
        
        @foreach (var cls in TempData)
        {
            if (cls.Key.Contains("notification"))
            {
                <div class="row">
                    <div class="col-sm-10">
                        <form class="col-xs-12" action="NavigateToClassView" method="post">
                            <input name="className" type="submit" id="className" value="@cls.Value" />
                            <abbr class="notification-on" title="קיימים שיעורי בית המחכים לבדיקה">!</abbr>
                        </form>
                    </div>
                </div>

                
            }
            else
            {
                <div class="row">
                    <div class="col-sm-10">
                        <form class="col-xs-12" action="NavigateToClassView" method="post">
                            <input name="className" type="submit" id="className" value="@cls.Value" />
                        </form>
                    </div>
                </div>
            }
        }

    </div>
    <br /><br /><br /><br /><br /><br /><br />
</body>

