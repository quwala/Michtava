

<br /><br /><br />
<head>
    <style>
        h2 {
            font-weight: bold;
            font: 50px arial, sans-serif;
        }

        input[type='submit'] {
            font-size: 32px;
            background-color: darkorange;
            border-color: darkorange;
        }

        body {
            background-image: url("../../Backgrounds/background.jpg");
            width: 100%;
            height: 100%;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .button {
            display: inline-block;
            border-radius: 4px;
            background-color: #f4511e;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 16px;
            padding: 10px;
            width: 100px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

        .button span:after {
            content: '<<';
            position: absolute;
            opacity: 0;
            top: 0;
            right: 20px;
            transition: 0.5s;
        }

        .button:hover span {
            padding-right: 25px;
        }

        .button:hover span:after {
            opacity: 1;
            right: 0;
        }
    </style>
</head>

<body>

<button class="button" onclick="location.href = '@Url.Action("NavigateToClassView", "Teachers")'" style="vertical-align: middle"><span>חזור </span></button>

<div class="row">
    <div class="row">
        <div class="col-sm-10">
            <b>
                <h2>@ViewBag.Title</h2></b>
        </div>
    </div>
    <br/>
    <div class="row">
        <h4>@TempData["email"]</h4>
    </div>
    <br/>
    <div class="row">
        <h4>@TempData["phoneNumber"]</h4>
    </div>
    <br/>
    <div class="row">
        <h4>@TempData["class"]</h4>
    </div>
    <br/>
    <div class="row">
        <h4>@TempData["userName"]</h4>
    </div>
    <br/>

    @foreach (var data in TempData)
    {
        if (data.Key.Contains("homework"))
        {
            <div class="row">
                <h4>@data.Value</h4>
            </div>
        }
    }

</div>
</body>

