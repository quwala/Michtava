

<br /><br /><br />
<head>
    <style>
        h2 {
            font-weight: bold;
            font: 50px arial, sans-serif;
        }

        input[type='submit'] {
            font-size: 32px;
            background-color: darkorange;
            border-color: darkorange;
        }

        body {
            background-image: url("../../Backgrounds/background.jpg");
            width: 100%;
            height: 100%;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .button {
            display: inline-block;
            border-radius: 4px;
            background-color: #f4511e;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 16px;
            padding: 10px;
            width: 100px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

            .button span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .button span:after {
                    content: '<<';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: 20px;
                    transition: 0.5s;
                }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }
    </style>
</head>

<body>
<button class="button" onclick="location.href = '@Url.Action("NavigateToHomeworkView", "Teachers")'" style="vertical-align: middle"><span>חזור </span></button>
    
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>השאלות</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            @foreach (var data in TempData)
            {
                if (data.Key.Contains("_homework"))
                {
                    <div class="col-sm-4 pull-right">
                        <textarea name="questions" id="questions" style="font-size: 20px; width: 300px; height: 200px;">@data.Value</textarea>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <b>
            <h3>@ViewBag.Title</h3>
        </b>
    </div>
</div>
<br/>

<div class="col-sm-6">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h2>תשובות</h2>
        </div>
        <div class="panel-body">
            @foreach (var data in TempData)
            {
                if (data.Key.Contains("_answer"))
                {
                    <div class="row">
                        <div class="col-sm-3 pull-right">
                            <textarea name="answer" id="answer" style="font-size: 20px; width: 500px; height: 400px;" >@data.Value</textarea>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div class="col-sm-6">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h2>תלמידים</h2>
        </div>
        <div class="panel-body">
            @foreach (var data in TempData)
            {
                if (data.Key.Contains("_student"))
                {
                    <div class="row">
                        <div class="col-sm-3 pull-right">
                            <form class="col-xs-12" action="ShowAnswer" method="post">
                                <input name="student" type="submit" id="student" value="@data.Value" />
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

</body>
