

<br /><br /><br />
<head>
    <style>
        h2 {
            font-weight: bold;
            font: 50px arial, sans-serif;
        }

        input[type='submit'] {
            font-size: 32px;
            background-color: darkorange;
            border-color: darkorange;
        }

        body {
            background-image: url("../../Backgrounds/background.jpg");
            width: 100%;
            height: 100%;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .button {
            display: inline-block;
            border-radius: 4px;
            background-color: #f4511e;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 16px;
            padding: 10px;
            width: 100px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

        .button span:after {
            content: '<<';
            position: absolute;
            opacity: 0;
            top: 0;
            right: 20px;
            transition: 0.5s;
        }

        .button:hover span {
            padding-right: 25px;
        }

        .button:hover span:after {
            opacity: 1;
            right: 0;
        }
        .notification-on {
            position: absolute;
            top: 0;
            right: 0;
            text-align: center;
            color: white;
            border-radius: 10px;
            background-color: red;
            width: 20px;
            font-weight: bold;
        }

        abbr[title] {
            border-bottom: none !important;
            cursor: inherit !important;
            text-decoration: none !important;
        }
    </style>
</head>

<body>
@Html.Raw(TempData["msg"])
<button class="button" onclick="location.href = '@Url.Action("Index", "Teachers")'" style="vertical-align: middle"><span>חזור </span></button>

<div class="row">
    <div class="row">
        <div class="col-sm-10">
            <b>
                <h2>@ViewBag.Title</h2>
            </b>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <b><h4>בחר/י תלמיד או נושא</h4></b>
        </div>
    </div>
    <br/>

    <div class="row">
        <div class="col-sm-10 pull-right">
            <form class="col-xs-12" action="NavigateToHomeworkView" method="post">
                <input type="submit" value="בדיקת שיעורי בית" style="background-color: green; border-color: green"/>
                @if (TempData.ContainsKey("HomeworkNotification"))
                {
                    <abbr class="notification-on" title="קיימים שיעורי בית המחכים לבדיקה">!</abbr>
                }                
            </form>
        </div>
    </div>
    <br/>
    <hr/>

    <div class="col-sm-6">
        <div class="panel panel-success">
            <div class="panel-heading"><b>
                    <h2>נושאים</h2></b>
            </div>
            <div class="panel-body">
                <!---------------------------------------------------------------------- נושאים --------------------------------------------------------------------->
                <div class="row">

                    @foreach (var data in TempData)
                    {
                        if (data.Key.Contains("subject"))
                        {
                            <div class="row">
                                <div class="col-sm-6 pull-right">
                                    <form class="col-xs-12" action="NavigateToTextsView" method="post">
                                        <input name="subject" type="submit" id="subject" value="@data.Value"/>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    <hr/>
                    <div class="row">
                        <div class="col-sm-6 pull-right">
                            <form class="col-xs-12" action="NavigateToAddSubject" method="post">
                                <input name="subject" type="submit" id="subject" value="+ הוסף/י נושא חדש לכיתה" style="background-color: green; border-color: green"/>
                            </form>
                        </div>
                    </div>
                </div>
                <!---------------------------------------------------------------------------------------------------------------------------------------------------->
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading"><b>
                    <h2>תלמידים</h2></b>
            </div>
            <div class="panel-body">
                <!---------------------------------------------------------------------- תלמידים --------------------------------------------------------------------->
                <div class="row">
                    @foreach (var data in TempData)
                    {
                        if (data.Key.Contains("student"))
                        {
                            <div class="row">
                                <div class="col-sm-6 pull-right">
                                    <form class="col-xs-12" action="NavigateToStudentView" method="post">
                                        <input name="student" type="submit" id="student" value="@data.Value"/>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
                <!----------------------------------------------------------------------------------------------------------------------------------------------------->
            </div>
        </div>
    </div>

</div>
</body>

