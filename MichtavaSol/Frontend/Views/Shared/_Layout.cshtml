<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
 
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
            border-right: 1px solid #bbb;
        }

    </style>

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" style="background-color: darkorange">
    
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("פרופיל אישי", "Contact", "Home", new { @class = "michtava-main navbar-brand" })</li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("הוספת שאלה", "../Policy/Policy", "../Policy", new {@class = "michtava-main navbar-brand"})</li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("הוספת טקסט", "TextAdding", "Home", new { @class = "michtava-main navbar-brand" })</li>
        </ul>

        <ul class="nav navbar-nav navbar-left">
            <li>@Html.ActionLink("התנתק", "Index", "Home", new {@class = "michtava-main navbar-brand "})</li>
        </ul>

        @Html.Partial("_LoginPartial")
    </div>
</div>

        


<div class="container body-content headstuff">
    @RenderBody()
    <hr />
    <footer>
        <p align="left">@DateTime.Now</p>
        <p>&copy; - מכתבה</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
