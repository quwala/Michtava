<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: darkorange">
            <div class="navbar-header" style="float: right">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(
                    "מכתבה",
                    "Index",
                    new { controller = "Home", area = "" },
                    new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")


                <ul class="nav navbar-nav">
               
                    <li>
                        @Html.ActionLink("צור קשר", "Contact", "Home", new { area = "" })
                    </li>
                    <li>
                        @Html.ActionLink("אודות", "About", "Home", new { area = "" })
                    </li>
                    <li>
                        @Html.ActionLink("דף הבית", "Index", "Home", new { area = "" })
                    </li>

                    @if (User.IsInRole(Common.GlobalConstants.SuperAdministratorRoleName))
                    {

                        <li>
                            @Html.ActionLink("Admin Area", "Index", "Home", new { area = "Administration" }, new { })
                        </li>
                    }
                </ul>
            </div>
    </div>

        


<div class="container body-content headstuff">
    @RenderBody()
    <hr />
    <footer>
        <p align="left">@DateTime.Now</p>
        <p>&copy; - מכתבה</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
