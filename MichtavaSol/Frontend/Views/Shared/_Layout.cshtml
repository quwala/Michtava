<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:orangered">

        <div class="navbar-header navbar-right">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("מכתבה", "Index", "Home", new { area = "" }, new { @class = "michtava-main navbar-brand " })
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
                <li>@Html.ActionLink("הוספת שאלה", "../Policy/Policy", "../Policy", new { @class = "michtava-main navbar-brand" })</li>
                <li>@Html.ActionLink("צור קשר", "Contact", "Home", new { @class = "michtava-main navbar-brand" })</li>

            </ul>
          @Html.Partial("_LoginPartial")
        </div>
        </div>

        


    <div class="container body-content headstuff">
        @RenderBody()
        <hr />
        <footer>
            <p align="left">@DateTime.Now</p>
            <p>&copy; - מכתבה</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
