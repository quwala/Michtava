@using Microsoft.AspNet.Identity

@model List<Entities.Models.Text>


<br /><br /><br />
<head>
    <style>
        h2 {
            font-weight: bold;
            font: 50px arial, sans-serif;
        }

        input[type='submit'] {
            font-size: 32px;
            background-color: darkorange;
            border-color: darkorange;
        }

        body {
            background-image: url("../../Backgrounds/background.jpg");
            width: 100%;
            height: 100%;
            background-position: center;
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }
    </style>
</head>

<body>
    <div class="row">
        <form class="text-right" action="ChooseText" method="post" id="TextsMenu">

            <div class="row">
                <div class="col-sm-10">
                    <b><u><h2>@ViewBag.Title:</h2></u></b>
                </div>
            </div>
            <br /><br />

            <div class="row">

                @foreach (var subject in Model)
            {
                    <div class="col-sm-4 pull-right">
                        <input name="textName" type="submit" value="@subject.Name" />
                    </div>
                }
            </div>

         


        </form>
    </div>
    <br /><br /><br /><br /><br /><br /><br />
</body>

