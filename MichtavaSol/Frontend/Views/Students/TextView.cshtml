                    <option value="28pt">28</option>
                    <option value="32pt">32</option>
                </select>
            </div>

            @if ((string)Session["WithQuestion?"] == "Without")
            {
                <div>
                    <audio id="textAudio" controls="true" preload="auto">
                        <source src="C:\Users\mweiss\Desktop\EluveitieMeetTheEnemy.mp3" type="audio/mpeg">
                        <source src="C:\Users\mweiss\Desktop\EluveitieMeetTheEnemy.ogg" type="audio/ogg">
                    </audio>
                </div>
                <div>
                    <button onclick="document.getElementById('textAudio').play()">PLAY</button>
                </div>
            }
        </div>
            
    <div class="col-sm-9 pull-right">
         
