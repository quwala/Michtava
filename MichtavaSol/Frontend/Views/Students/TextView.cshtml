                    @if ((string)Session["notificationFlag"] == "true")
                    {
                        <div class="row">
                            <div class="col-sm-4">
                                <div class=" col-sm-12" style="margin-bottom:10px">
                                    <abbr class="notification-on" title="קיימים שיעורי בית שעלייך להשלים!">!</abbr>

                                    <input name="1" type="submit" value="המשך לשאלות" />
                                </div>
                                <div class="col-sm-12">
                                    <h5 style="color:red">קיימים שיעורי בית שעלייך להשלים בטקסט @Session["textName"]</h5>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-sm-4">
                                <input name="1" type="submit" value="המשך לשאלות" />
                            </div>
                        </div>
                    }
                </form>
            }
            else
            {
                <div class="row">
                    <div class="col-sm-4 pull-left">
                        <h2>לסיפור זה אין שאלות</h2>
                    </div>
                </div>
            }
        }

        else
        {
            <form class="text-right" action="ChooseAction" method="post">
                <div class="row">
                    <div class="col-sm-3 col-sm-push-3">
                        <br />
                        <input name="submit" type="submit" value="בחזרה לסיפור" />
                    </div>
                </div>
            </form>
        }
    <br />
 
</div>

