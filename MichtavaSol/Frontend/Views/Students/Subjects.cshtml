
@using Microsoft.AspNet.Identity

@model Frontend.Models.SubjectsNotificationsViewModel


<br /><br /><br />
<head>
    <style>
        h2 {
            font-weight: bold;
            font: 50px arial, sans-serif;
        }

        input[type='submit'] {
            font-size: 32px;
            background-color: darkorange;
            border-color: darkorange;
        }

        div.button-wrapper {
            position: relative;
        }



        .notification-on {
            position: absolute;
            top: 0;
            right: 0;
            text-align: center;
            color: white;
            border-radius: 10px;
            background-color: red;
            width: 20px;
            font-weight: bold;
        }

        abbr[title] {
            border-bottom: none !important;
            cursor: inherit !important;
            text-decoration: none !important;
        }



        body {
            background-image: url("../../Backgrounds/background.jpg");
            width: 100%;
            height: 100%;
            background-position: center;
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }
    </style>
</head>

<body>

    <div class="row">
        <form class="text-right" action="ChooseSubSubject" method="post" id="SubjectsMenu">
            <div class="row">
                <div class="col-sm-10">
                    <b>
                        <u>
                            <h2>@ViewBag.Title:</h2>                            
                        </u>
                    </b>
                </div>
                
                <div class="col-sm-2 pull-left">
                   
                      
                            <h3>@Session["StudentName"]</h3>
                     
                 
                </div>

            </div>
            <br /><br />

            <div class="row">

          

                @foreach (var subject in Model.Subjects)
                {
                    if (Model.subjectsIDList.Contains(subject.Id))
                    {
                        
                        <div class="col-sm-12 pull-right" style="margin-bottom:10px">
                            <div class=" col-sm-10 pull-right">
                                <abbr class="notification-on" title="קיימים שיעורי בית שעלייך להשלים!">!</abbr>
                                
                                <input name="subjName" type="submit" value="@subject.Name" />
                            </div>
                            <div class=" col-sm-10 pull-right">
                                <h5 style="color:red">קיימים שיעורי בית שעלייך להשלים ב @subject.Name</h5>
                            </div>
                           
                        </div>
                       
                    }
                    else
                    {
                        <div class="col-sm-12 pull-right" style="margin-bottom:10px">
                            <div class="col-sm-4 pull-right">
                            <input name="subjName" type="submit" value="@subject.Name" />
                            </div>
                            
                        </div>

                    }
                
                }

            </div>
        </form>
    </div>
    <br /><br /><br /><br /><br /><br />
</body>

