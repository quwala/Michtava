
<br /><br /><br />
<head>
    <style>
        input[type='text'], input[type='password'] {
            font-size: 24px;
            background-color: lemonchiffon;
            border-color: green;
        }

        input[type='submit'] {
            font-size: 32px;
            background-color: darkorange;
            border-color: darkorange;
        }

        body {
            background-image: url("../../Backgrounds/background.jpg");
            width:100%;
            height: 100%;
            background-position: center;
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }
    </style>
</head>

<body>
<div class="row">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-10">
                <img src="../../Logo/2.png" alt="מכתבה" height="250" width="250">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                <input type="text" name="userName" placeholder="שם משתמש" required="required" id="userName" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                <input type="password" name="password" placeholder="סיסמה" required="required" id="password" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                <input type="submit" value="כניסה"/>
            </div>

        </div>
    }
</div>
<br /><br /><br /><br /><br /><br /><br />
</body>